<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  <!--Main Nav Navigation-->
<br>
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-10">
        <h1 style="color:darkcyan; text-align: center;"><%=title %></h1>
          <%if(typeof displayName =='string'&&displayName){%>
        <a href="/updateList/add" class="btn" style="background-color: darkcyan; color: white;" role="button"><i class="fas fa-plus-circle"></i>Add a Contact</a>
        <%}%>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            
            <tr>
              <%if(typeof displayName =='string'&&displayName){%>
                <th class="text-center col-2" style="color: darkcyan;">Name</th>
                <th class="text-center col-2" style="color: darkcyan;">Number</th>
                <th class="text-center col-1" style="color: darkcyan;">Email</th>
              
                <th class="text-center col-1"></th>
                <th class="text-center col-1"></th>
                <%}else{%>
                  <th class="text-center col-2" style="color: darkcyan;">Name</th>
                <th class="text-center col-2" style="color: darkcyan;">Number</th>
                <th class="text-center col-1" style="color: darkcyan;">Email</th>
                

                <%}%>
                </tr>
               <%for(let count = 0; count < ContactList.length; count ++){%>
                    <tr>
                          <%if(typeof displayName =='string'&&displayName){%>
                        <td class="text-center col-2"><%=ContactList[count].name%></td>
                        <td class="text-center col-2"><%=ContactList[count].number%></td>
                        <td class="text-center col-1"><%=ContactList[count].email%></td>
                      
                    
                        <td class="text-center col-1"><a href="/updateList/edit/<%=ContactList[count]._id%>" class="btn" style="background-color: darkcyan; color: white;"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                        <td class="text-center col-1"><a href="/updateList/delete/<%=ContactList[count]._id%>" class="btn" style="background-color: lightcoral; color: white;"><i class="fas fa-trash-alt"></i>Delete</a></td>
                        <%}else{%>
                          <td class="text-center col-2"><%=ContactList[count].name%></td>
                        <td class="text-center col-2"><%=ContactList[count].number%></td>
                        <td class="text-center col-1"><%=ContactList[count].email%></td>
                    
                    
                        <%}%>  
                      </tr>
                        <%}%>
            </table>
            <br>
            <br>
            <%if(typeof displayName =='string'&&displayName){%>

            <a href="/contactList" class="btn" style="background-color: rgb(166, 87, 87); color: white;" role="button"><i class="fa-solid fa-ban"></i>Cancel</a>
            <%}%>

        </div>
    </div>
  </main>
  
